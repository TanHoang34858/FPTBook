@model IBook.Models.OrderBook

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Order Editing</h2>
<form method="post" asp-action="Edit">
    <div class="p-5 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OrderID" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AppointmentDate" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="AppointmentDate" class="form-control" />
            </div>
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustomerName" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="CustomerName" class="form-control" />
            </div>
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustomerAddress" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="CustomerAddress" class="form-control" />
            </div>
            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustomerPhone" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="CustomerPhone" class="form-control" />
            </div>
            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                @Html.DisplayNameFor(model => model.isConfirmed)
            </div>
            <div class="checkbox col-10" >
                <label>
                    <input style="height:30px; width:30px;" asp-for="isConfirmed" />
                </label>
            </div>
        </div>
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Return</a>
        </div>
    </div>
</form>

