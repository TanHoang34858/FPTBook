@model IBook.Models.Book

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2 class="text-info">Chỉnh sửa thông tin đầu sách</h2>
<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="p-5 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BookID" />
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Title" class="control-label"></label>
            </div>
            <div class="col-11">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Quantities" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Quantities" class="form-control" />
            </div>
            <span asp-validation-for="Quantities" class="text-danger"></span>
            <div class="col-1">
                <label asp-for="CreateDate" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CreateDate" class="form-control" />
            </div>
            <span asp-validation-for="CreateDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="ModifiedDate" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ModifiedDate" class="form-control" />
            </div>
            <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            <div class="col-1">
                <label asp-for="NumberOfPages" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="NumberOfPages" class="form-control" />
            </div>
            <span asp-validation-for="NumberOfPages" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Price" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
            <div class="col-1">
                <label asp-for="AuthorID" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.AuthorID"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="CategoryID" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="col-1">
                <label asp-for="PublisherID" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="PublisherID" class="form-control" asp-items="ViewBag.PublisherID"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Summary" class="control-label"></label>
            </div>
            <div class="col-11">
                <textarea style="height:250px;" asp-for="Summary" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-1">
                @Html.DisplayNameFor(model => model.IsPurchase)
            </div>
            <div class="checkbox col-5 text-center">
                <label>
                    <input style="width:30px; height:30px;" asp-for="IsPurchase" />
                </label>
            </div>
            <div class="col-1">
                <label asp-for="ImageUrl" class="control-label"></label>
            </div>
            <div class="col-5">
                <input id="HinhAnh" type="file" name="files" class="form-control" />
            </div>
        </div>
        <input asp-for="ImageUrl" hidden value="NULL" class="form-control" />

        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary" value="Cập nhật" />
            <a asp-action="Index" class="btn btn-success">Quay về</a>
        </div>
    </div>
</form>
