@model IBook.Models.Book
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Book details</h2>
<div class="p-5 border rounded">
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row nn-margin-bottom ">
            <div class="nn-product-image-box col-sm-1">
            </div>
            <div class="nn-product-image-box col-sm-4">
                <div class="nn-product-image-box-main  ">
                    <img class="img-responsive" style="height:600px; width:400px;" src="@Model.ImageUrl" />
                </div>
            </div>
            <div class="nn-product-shop col-sm-6">

                <div class="product-name">
                    <h1>@Model.Title</h1>
                </div>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Summary: </i>
                    </span>
                    <span>
                        @Model.Summary
                    </span>
                    In stock
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Author: </i>
                    </span>
                    <span>
                        @Model.Author.Name
                    </span>
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Category: </i>
                    </span>
                    <span>
                        @Model.Category.Name
                    </span>
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Publisher: </i>
                    </span>
                    <span>
                        @Model.Publisher.Name
                    </span>
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Number Of Pages: </i>
                    </span>
                    <span>
                        @Model.NumberOfPages
                    </span>
                    Cover page
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Publication date: </i>
                    </span>
                    <span>
                        @Model.CreateDate.ToShortDateString()
                    </span>
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Reprint date: </i>
                    </span>
                    <span>
                        @Model.ModifiedDate.ToShortDateString()
                    </span>
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Quantities: </i>
                    </span>
                    <span>
                        @Model.Quantities
                    </span>
                    Roll in stock.
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Price: </i>
                    </span>
                    <span>
                        @Model.Price
                    </span>
                    VNĐ
                </p>
                <p class="availability in-stock">
                    <span class="item-title">
                        <i style="font-size:23px;">Permission to sell: </i>
                    </span>
                    <span>
                        <label style="visibility:visible;">
                            <input style="height:30px; width:30px;" disabled asp-for="IsPurchase" />
                        </label>
                    </span>
                </p>
            </div>
            <div class="nn-product-image-box col-sm-1"></div>
        </div>
    </dl>
    <div class="form-group text-center">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BookID">Edit</a>
        <a asp-action="Index" class="btn btn-success">Return</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.BookID">Xóa</a>
    </div>
</div>
