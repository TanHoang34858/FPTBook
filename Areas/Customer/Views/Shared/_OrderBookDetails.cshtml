@model List<IBook.Models.Book>

@if (Model.Count > 0)
{
    <table class="table table-striped" width="100%" style="padding: 15px; border-radius:5px; border:1px solid #bbb9b9">
        <tr class="table-info">
            <th style="text-align:center; width:20%"></th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Title"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Price"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Category.Name"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Author.Name"></label>
            </th>
            <th style="text-align:center;"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="padding:50px;">
                <td>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.BookID">
                        <img src="@item.ImageUrl" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                    </a>
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Title)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Price)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Category.Name)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Author.Name)
                </td>
                <td style="text-align:center">
                </td>
            </tr>

        }
    </table>
}
else
{
    <div>No items added to the shopping cart...</div>
}